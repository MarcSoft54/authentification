MainWidget:

<sizeInput@TextInput>:
    size_hint: None, None
    height: "50dp"
    halign: "center"
    width: "400dp"

<FitLabe@Label>:
    size_hint: None, None
    size: self.texture_size

<badge@FitLabe>:
    color: 0, 0, 1, 1
    bold: True
    font_size: "10dp"
    padding: dp(8), dp(3)
    canvas.before:
        Rectangle:
            source: "images/baget_en_tete.jpg"
            pos: self.pos
            size: self.size

<MainWidget>:
    orientation: "vertical"
    spacing: "10dp"
    padding: "200dp"
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: "vertical"
        size_hint_y: None
        height: "40dp"
        Label:
            text: "Page de connexion..."

    Label:
        size_hint_y: None
        height: "20dp"
    sizeInput:
        id: Mat
        hint_text: "matricule"
        mutliline: False
    sizeInput:
        id: passt
        hint_text: "mot de passe"
        password: True
        multiline: False
    Label:
        text: str(root.reponse)
        color: (0, 1, 0, 1)
        size_hint_y: None
        height: "50dp"
    Button:
        text: "se connecter"
        size_hint: None, None
        height: "40dp"
        on_press: root.verifier()
        width: "100dp"
        margin: "100dp"